      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.select :state, @states %>
  </div>

  <div class="field">
    <%= form.label :loan_date %>
    <%= form.date_select :loan_date, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :return_date %>
    <%= form.date_select :return_date, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :friend %>
    <%= form.text_field :friend %>
  </div>

  <div class="field">
    <%= form.label :generate %>
    <%= form.select :generate, @generates %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
