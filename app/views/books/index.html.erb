<p id="notice"><%= notice %></p>


<div class="row">
    <div class="col-md-3 offset-md-2">
      <%= search_form_for @q do |f| %>
        <div class="form-group">
          <%= f.label :title_or_author_or_generate_cont %>
          <%= f.search_field :title_or_author_or_generate_cont, class: "form-control", placeholder: "Search text" %>
      </div>

      <div class="form-group">
        <%= f.label :state_eq, "State" %>
        <%= f.select :state_eq, options_for_select(Book.states ,
        @q.state_eq), {},{class: "form-control"} %>
      </div>

      <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>


<div class="row">
  <div class="col-md-8 offset-md-2">
    <table class="table"> 
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>State</th>
          <th>Loan date</th>
          <th>Return date</th>
          <th>Friend</th>
          <th>Generate</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.state %></td>
            <td><%= book.loan_date %></td>
            <td><%= book.return_date %></td>
            <td><%= book.friend %></td>
            <td><%= book.generate %></td>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
  </div>
</div>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= link_to 'New Books', new_book_path %>
  </div>
</div>
